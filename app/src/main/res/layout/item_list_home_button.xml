<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <com.nowitest.util.OpensansSemibold.ButtonTextRoboto
                android:id="@+id/activity_home_student_button_test"
                android:layout_weight="99.50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/test"
                android:textColor="@color/black"
                android:drawableTop="@drawable/test_icon"
                android:drawablePadding="10dp"
                android:textSize="16dp"
                android:maxLines="4"
                android:lines="4"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <View
                android:id="@+id/item_list_home_button_verticle_line"
                android:layout_weight="0.50"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/home_verticle_line"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_weight="1"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/home_horizontal_line"/>

</LinearLayout>