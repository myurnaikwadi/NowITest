<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/activity_start_test_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="80"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.nowitest.util.OpensansRegular.TextViewRoboto
                        android:id="@+id/activity_quizz_textView_question_no"
                        android:layout_below="@+id/quizProgress"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="18dp"
                        android:text="1"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/edittext_hint"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/activity_quizz_imageview_question"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_launcher"/>

                    <com.nowitest.util.OpensansRegular.TextViewRoboto
                        android:id="@+id/activity_quizz_textView_question"
                        android:layout_below="@+id/quizProgress"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="18dp"
                        android:text=""
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/edittext_hint"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"/>
                </LinearLayout>


                <com.nowitest.util.OpensansRegular.TextViewRoboto
                    android:id="@+id/activity_quizz_textView_time_taken"
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text=""
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_below="@+id/activity_quizz_textView_question"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/dynamicCheckBox"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content">

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.nowitest.util.OpensansSemibold.ButtonTextRoboto
                    android:id="@+id/activity_start_test_button_previous"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/button_previous"
                    android:textColor="@color/white"
                    android:background="@drawable/blue_btn"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="1dp"
                    />

                <com.nowitest.util.OpensansSemibold.ButtonTextRoboto
                    android:id="@+id/activity_start_test_button_next"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/button_next"
                    android:textColor="@color/white"
                    android:background="@drawable/blue_btn"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="1dp"
                    />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>