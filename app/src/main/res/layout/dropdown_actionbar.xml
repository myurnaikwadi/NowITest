<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:background="@color/actionBar"
        android:paddingLeft="30dp">

        <com.nowitest.util.OpensansSemibold.TextViewRoboto
            android:id="@+id/dropdown_actionbar_textview_header_title"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:paddingTop="15dp"
            android:drawableRight="@drawable/analytics_dropdown"
            android:paddingBottom="10dp"
            android:text="ANALYTICS-OVERALL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:maxLength="50"
            android:textColor="@color/white"/>

        <include
            android:layout_marginLeft="25dp"
            android:id="@+id/layout_sync"
            layout="@layout/custom_menu_sync_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

        </include>
    </RelativeLayout>
</LinearLayout>